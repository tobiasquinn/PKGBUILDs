# Contributor: Tobias Quinn <tobias@tobiasquinn.com>

pkgname=priscasms-git
pkgrel=1
pkgver=20110121
pkgdesc="QT GUI to send SMS using gammu"
arch=(any)
url="http://tobiasquinn.com/priscasms"
license=('GPL3')
depends=('python2-qt')
makedepends=('python2-qt')
conflicts=('priscasms')
provides=('priscasms')
_gitroot=('git://github.com/tobiasquinn/priscasms.git')
_gitname=('priscasms')

build() {
    cd $(srcdir)
    # Git checkout
    if [ -d $_gitname ]; then
        cd $_gitname
        git checkout origin/python2
    else
        git clone $_gitroot
        git checkout origin/python2
        cd $_gitname
    fi
    msg 'GIT checkout done or server timeout'
    msg 'Starting make...'

    python2 setup.py install --root=$pkgdir/ --optimize=1
}

