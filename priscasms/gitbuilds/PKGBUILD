# Contributor: Tobias Quinn <tobias@tobiasquinn.com>

pkgname=priscasms-git
pkgver=20110121
pkgrel=1
pkgdesc="QT GUI to send SMS using gammu"
arch=(any)
url="http://tobiasquinn.com/priscasms"
license=('GPL3')
depends=('python-qt')
makedepends=('python-qt')
conflicts=('priscasms')
provides=('priscasms')
_gitroot=('git://github.com/tobiasquinn/priscasms.git')
_gitname=('priscasms')

build() {
    cd $(srcdir)
    # Git checkout
    if [ -d $_gitname ]; then
        cd $_gitname
        git pull origin
    else
        git clone $_gitroot
        cd $_gitname
    fi
    msg 'GIT checkout done or server timeout'
    msg 'Starting make...'

    python setup.py install --root=$pkgdir/ --optimize=1
}

